                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Limited to one client
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Multiple installation
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Not ready for resale
                    .cardbox-body.text-center
                        .mb-4.text-info
                            span.h1
                                small $
                                span.text-bold 30
                            small.text-muted / year
                        a.btn.btn-outline-info(href="#") CHOOSE
            // PLAN
            .col-sm-4
                .cardbox.b
                    .p-2
                        .cardbox-body.bg-gradient-success.text-center.text-white.rounded
                            em.ion-bag.icon-3x
