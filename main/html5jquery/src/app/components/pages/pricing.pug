                            span Free Updates
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Limited to one client
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Multiple installation
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Ready for resale*
                    .cardbox-body.text-center
                        .mb-4.text-success
                            span.h1
                                small $
                                span.text-bold 30
                            small.text-muted / year
                        a.btn.btn-outline-success(href="#") CHOOSE
        .mb-5
        .card-group
            // PLAN
            .card.b
                .card-block.text-center.bb.text-info
                    em.ion-heart.icon-2x
                    h1.my-4.text-bold
                        sup
                        span.text-lg FREE
