extends ../core/core.layout.pug
block pagetitle
    - pageTitle = 'Pricing'
block content
    .container.container-md
        .row
            // PLAN
            .col-sm-4
                .cardbox.b
                    .p-2
                        .cardbox-body.bg-gradient-primary.text-center.text-white.rounded
                            em.ion-bag.icon-3x
                            .text-bold INITIAL
                    .cardbox-body
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Unlimited Styles
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span RTL &amp; Translation
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Customer support
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Free Updates
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Limited to one client
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Multiple installation
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Not ready for resale
                    .cardbox-body.text-center
                        .h1.mb-4.text-primary.text-bold FREE
                        a.btn.btn-outline-primary(href="#") CHOOSE
            // PLAN
            .col-sm-4
                .cardbox.b
                    .p-2
                        .cardbox-body.bg-gradient-info.text-center.text-white.rounded
                            em.ion-bag.icon-3x
                            .text-bold ADVANCED
                    .cardbox-body
                        p.mb-3
                            em.ion-checkmark-round.mx-3
                            span Unlimited Styles
                        p.mb-3
